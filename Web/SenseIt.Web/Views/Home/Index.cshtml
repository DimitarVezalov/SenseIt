@using SenseIt.Common
@{
    this.ViewData["Title"] = GlobalConstants.SystemName;
}

<div class="text-center">
    <h1 class="display-4">Welcome to @this.ViewData["Title"]</h1>
</div>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/IndexPage/Carousel/carousel-store.jpg" class="d-block w-100" alt="carousel-store">
            <div class="carousel-caption d-none d-md-block bg-dark">
                <p class="text-muted">Huge Collection Of High Quality Cosmetics And Accessories</p>
                <a class="text-muted btn btn-outline-secondary" asp-controller="Store" asp-action="ProductsAll">Shop Our Products</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/IndexPage/Carousel/carousel-hair-services.jpg" class="d-block w-100" alt="carousel-hair-services">
            <div class="carousel-caption d-none d-md-block bg-dark">
                <p clas="text-muted">Try The Newest Tendencies In Hair Cuting, Hair Styling And Hair Spa</p>
                <a class="text-muted btn btn-outline-secondary" asp-controller="AppServices" asp-action="ByCategory">Hair Services</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/IndexPage/Carousel/carousel-offers.png" class="d-block w-100" alt="carousel-offers">
            <div class="carousel-caption d-none d-md-block bg-dark">
                <p class="text-muted">Get Advantage Of Our Insatiable Offers</p>
                <a class="text-muted btn btn-outline-secondary" asp-controller="Offers" asp-action="All">Trending Offers</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
