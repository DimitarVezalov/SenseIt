@model SenseIt.Web.ViewModels.AppServices.AllAppServicesVIewModel

@{
    this.ViewData["Title"] = "Sense It";
}

<title>@this.ViewData["Title"]</title>

@foreach (var appService in Model.AppServices)
{
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" style="height: 400px" src="@appService.ImageUrl" alt="Card image cap" id="product-detail">
                </div>
                <div class="row">
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="prev">
                            <i class="text-dark fas fa-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </div>
                    <!--End Controls-->
                    <!--Start Carousel Wrapper-->
                    <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                        <!--Start Slides-->
                        <div class="carousel-inner product-links-wap" role="listbox">

                            <!--First slide-->
                            <div class="carousel-item active">
                                <div class="row">
                                    <div class="col-4">
                                        <a href="@appService.ImageUrl">
                                            <img class="card-img img-fluid" src="@appService.ImageUrl" alt="Product Image 1">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a href="#">
                                            <img class="card-img img-fluid" src="@appService.ImageUrl" alt="Product Image 2">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a href="#">
                                            <img class="card-img img-fluid" src="@appService.ImageUrl" alt="Product Image 3">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Slides-->
                    </div>
                    <!--End Carousel Wrapper-->
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="next">
                            <i class="text-dark fas fa-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--End Controls-->
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2">@appService.Name</h1>
                        <p class="h3 py-2">$@appService.Price.ToString("F2")</p>
                        <p class="py-2">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                        </p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Duration:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@appService.DurationAsText</strong></p>
                            </li>
                        </ul>

                        <h6>Description:</h6>
                        <p>@appService.Description</p>

                        <h6>Category:</h6>
                        <ul class="list-unstyled pb-3">
                            <li>@appService.CategoryName</li>
                        </ul>


                        <form action="" method="GET">
                            <input type="hidden" name="product-title" value="Activewear">            
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-success btn-lg" name="submit" value="buy">Book Appointment</button>
                                </div>
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-info btn-lg" name="submit" value="addtocard">Write A Review</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

