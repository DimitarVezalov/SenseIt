@model SenseIt.Web.ViewModels.AppServices.AppServicesIndexViewModel

@{ 
    this.ViewData["Title"] = "Sense It";
}

<title>@this.ViewData["Title"]</title>

<section class="bg-light">

    <h2 class="text-center mt-3">Our Categories</h2>
    @foreach (var category in Model.AllCategories)
    {
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" style="height:400px" src="@category.ImageUrl" alt="Card image cap">
                    </div>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">

                                <!--First slide-->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="Model.ImageUrl">
                                                <img class="card-img img-fluid" src="@category.ImageUrl" alt="Product Image 1">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img class="card-img img-fluid" src="@category.ImageUrl" alt="Product Image 2">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img class="card-img img-fluid" src="@category.ImageUrl" alt="Product Image 3">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--End Slides-->
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h2">@category.Name</h1>

                            <h6>Description:</h6>
                            <p style="height: 286px">@category.Description</p>

                        </div>

                    </div>
                    <div class="row mt-4">
                        <form method="get">
                            <div class="col">
                                <a class="btn btn-lg btn-outline-success text-center" asp-action="ByCategory" asp-route-id="@category.Id">View All Services</a>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    }

</section>
