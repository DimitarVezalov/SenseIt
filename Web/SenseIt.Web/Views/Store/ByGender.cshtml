@model  SenseIt.Web.ViewModels.Products.ProductsPagingByGenderViewModel
@{ 
    this.ViewData["Title"] = "Sense It";

    var genders = Model.Genders;
    var categories = Model.Categories;
}

<title>@this.ViewData["Title"]</title>

<div class="container py-5">
    <div class="row">

        <div class="col-lg-3">
            <h1 class="h2 pb-4">Shop By</h1>
            <ul class="list-unstyled templatemo-accordion">
                <li class="pb-3">
                    <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                        Gender
                        <i class="fa fa-fw fa-chevron-circle-down mt-1"></i>
                    </a>
                    <ul class="collapse show list-unstyled pl-3">
                        @foreach (var gender in genders)
                        {
                            <li><a class="text-decoration-none" asp-action="ByGender" asp-route-id="1" asp-route-gender=@gender>@gender</a></li>
                        }
                    </ul>
                </li>
                <li class="pb-3">
                    <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                        Category
                        <i class="pull-right fa fa-fw fa-chevron-circle-down mt-1"></i>
                    </a>
                    <ul id="collapseTwo" class="collapse list-unstyled pl-3">
                        @foreach (var category in categories)
                        {
                            <li><a class="text-decoration-none" asp-action="ByCategory" asp-route-id="" asp-route-category="@category">@category</a></li>
                        }
                    </ul>
                </li>
            </ul>
        </div>

        <div class="col-lg-9">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-inline shop-top-menu pb-3 pt-1">
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none mr-3" asp-action="All">All</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6 pb-4">
                    <div class="d-flex">
                        <select class="form-control">
                            <option>Featured</option>
                            <option>A to Z</option>
                            <option>Item</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 product-wap rounded-0">
                            <div class="card rounded-0">
                                <img class="card-img rounded-0 img-fluid" style="height: 300px" src=@product.ImageUrl>
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">
                                        @*<li><a class="btn btn-success text-white" href="shop-single.html"><i class="far fa-heart"></i></a></li>*@
                                        <li><a class="btn btn-success text-white mt-2" asp-action="Details" asp-route-id="@product.Id"><i class="far fa-eye"></i></a></li>
                                        <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="fas fa-cart-plus"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body" style="height: 150px">
                                <p class="text-center h3 text-decoration-none">@product.ShortName</p>

                                <ul class="list-unstyled d-flex justify-content-center mb-1">
                                    <li>
                                        <i class="text-warning fa fa-star"></i>
                                        <i class="text-warning fa fa-star"></i>
                                        <i class="text-warning fa fa-star"></i>
                                        <i class="text-success fa fa-star"></i>
                                        <i class="text-muted fa fa-star"></i>
                                    </li>
                                </ul>
                                <div class="row">
                                    <p class="col-6 text-center mb-0">$@product.Price.ToString("F2")</p>
                                    <p class="col-6 text-center mb-0">$@product.Gender</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <nav aria-label="...">
                <ul class="pagination justify-content-end">
                    <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
                        <a class="page-link" asp-action="ByGender" asp-route-gender=@Model.Gender asp-route-id="@Model.PreviousPageNumber">Previous</a>
                    </li>
                    @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
                    {
                        if (i > 0)
                        {
                            <li class="page-item"><a class="page-link" asp-action="ByGender" asp-route-gender=@Model.Gender asp-route-id="@i">@i</a></li>
}
                    }

                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">@Model.PageNumber</a>
                    </li>
                    @for (int i = Model.PageNumber + 1; i < Model.PageNumber + 3; i++)
                    {
                        if (i <= Model.PagesCount)
                        {
                            <li class="page-item"><a class="page-link" asp-action="ByGender" asp-route-gender=@Model.Gender asp-route-id="@i">@i</a></li>
}
                    }
                    <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
                        <a class="page-link" asp-action="ByGender" asp-route-gender=@Model.Gender asp-route-id="@Model.NextPageNumber">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</div>