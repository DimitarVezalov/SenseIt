@using SenseIt.Web.ViewModels.Reviews;

@model IEnumerable<UserReviewsViewModel> 
@{
    this.ViewData["Title"] = "Sense It";
}

<div class="container container-fluid">

    <h2 class="text-center text-success mt-3">Your Reviews</h2>
    @foreach (var review in Model)
    {
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4" @*style="height: 200px; width: 300px;*@>
                    <img src=@review.AppServiceImageUrl class="img-fluid rounded-start" alt="imageUrl" style="height: 300px; width: 500px;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@review.AppServiceName</h5>
                        <p class="card-text">@review.Content</p>
                        <div style="position: absolute; bottom: 0; right: 0;">
                            <i class="list-inline-item text-info fas fa-user-edit"><span class="text-secondary"> @review.PostedBy</span></i>
                            <i class="far fa-calendar-alt"><span class="text-secondary"> @review.PostedOn</span></i>
                            @for (int i = 0; i < review.Rating; i++)
                            {
                                <i class="text-warning fas fa-star"></i>
                            }

                            @for (int i = review.Rating; i < 5; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <i class="fas fa-trash-alt text-dark"></i>
                        </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this review?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@review.Id" />
                            <button type="submit" class="btn btn-danger" asp-action="Delete" >Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }

</div>

@section Scripts{ 
    <script>
        var myModal = document.getElementById('myModal')
        var myInput = document.getElementById('myInput')

        myModal.addEventListener('shown.bs.modal', function () {
            myInput.focus()
        })
    </script>
}