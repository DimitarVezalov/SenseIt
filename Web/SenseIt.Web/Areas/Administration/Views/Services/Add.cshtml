@using SenseIt.Services.Data.Admin;

@model SenseIt.Services.Data.Admin.Models.AppServices.CreateServiceInputModel;

@inject IAdminServiceCategoriesService adminCategoriesService;

@{
    this.ViewData["Title"] = "Admin dashboard";

    var categories = await adminCategoriesService.GetCategoryNames();
}


<div>
    <h2 class="text-center">Create Service</h2>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group pb-5">
        <span class="input-group-text">Name</span>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="input-group pb-5">
        <select class="form-select" asp-for="Category">
            <option selected>Choose...</option>
            @foreach (var category in categories)
            {
                <option>@category</option>
            }
        </select>
        <label class="input-group-text" for="inputGroupSelect02">Category</label>
    </div>

    <div class="input-group pb-5">
        <span class="input-group-text">Image Url</span>
        <input type="text" asp-for="ImageUrl" class="form-control">
        <span asp-validation-for="ImageUrl"></span>
    </div>

    <div class="input-group pb-5">
        <span class="input-group-text">$</span>
        <input type="number" asp-for="Price" class="form-control">
        <span asp-validation-for="Price"></span>
        <span class="input-group-text">Duration</span>
        <input type="text" placeholder="HH:MM" aria-label="HH:MM" asp-for="Duration" class="form-control">
        <span asp-validation-for="Duration"></span>
    </div>

    <div class="input-group pb-5">
        <span class="input-group-text">Description</span>
        <textarea rows="4" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="row">
        <div class="col-6">
            <input type="submit" class="btn btn-lg btn-info form-control" value="Create" />
        </div>
        <div class="col-6">
            <a asp-action="All" class="btn btn-lg btn-secondary form-control">Back to List</a>
        </div>
    </div>
</form>


