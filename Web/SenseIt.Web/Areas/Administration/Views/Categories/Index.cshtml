@{
    this.ViewData["Title"] = "Admin dashboard";
}
<div class="row">
    <div class="col-md-6">
        <h2 class="text text-center text-info">Products</h2>
        <hr />
        <div class="card offset-2" style="width: 30rem;">
            <img src="~/Images/Products/Admin-Products.jpg" class="card-img-top" alt="">
            <div class="card-body text-center">
                <p class="card-text">Add, Edit And Delete Category.</p>
                <a asp-area="Administration" asp-controller="ProductCategories" asp-action="All" class="btn btn-primary">Manage Product Categories</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h2 class="text text-center text-info">Services</h2>
        <hr />
        <div class="card offset-2" style="width: 30rem;">
            <img src="~/Images/Services/Admin-Services.jpg" class="card-img-top" alt="">
            <div class="card-body text-center">
                <p class="card-text">Add, Edit And Delete Category.</p>
                <a asp-area="Administration" asp-controller="ServiceCategories" asp-action="All" class="btn btn-primary">Manage Service Categories</a>
            </div>
        </div>
    </div>
</div>