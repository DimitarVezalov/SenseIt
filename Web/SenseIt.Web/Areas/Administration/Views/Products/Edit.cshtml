@using SenseIt.Services.Data.Admin;

@model SenseIt.Services.Data.Admin.Models.Product.AdminProductUpdateModel;


@{
    this.ViewData["Title"] = "Admin Dashboard";
    var categories = this.Model.Categories.Select(c => new SelectListItem(c, c));
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="pb-4 pt-5">
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group pb-5">
                    <span class="input-group-text">Name</span>
                    <input type="text" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @*<div class="input-group pb-5">
                        <select class="form-select" asp-for="Category">
                            <option selected>Choose...</option>
                            @foreach (var category in categories)
                            {
                                <option>@category</option>
                            }
                        </select>
                        <label class="input-group-text" for="inputGroupSelect02">Category</label>
                    </div>*@

                <div class="input-group pb-5">
                    <select asp-for="Category" class="form-select" asp-items="@categories">
                        <option value="new">Select Category</option>
                    </select>
                    <label class="input-group-text" for="@categories">Category</label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="input-group pb-5">
                    <span class="input-group-text">Image Ur</span>
                    <input type="text" asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="input-group pb-5">
                    <span class="input-group-text">$</span>
                    <input type="number" asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="input-group pb-5">
                    <span class="input-group-text">Description</span>
                    <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Edit Product" />
                    </div>
                    <div class="col-6">
                        <a asp-action="All" class="btn btn-dark form-control">Back to Products</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


